@model TaskManagementPlatform.Models.Project

@{
    ViewData["Title"] = "Project Details";
    var currentUser = User.Identity.Name;
    var isOrganizer = Model.Organizer.UserName == currentUser || User.IsInRole("Administrator");
}

<div class="container">
    <h1>@Model.Title</h1>
    <p class="lead">@Model.Description</p>
    <p><strong>Organizer:</strong> @Model.Organizer.UserName | <strong>Created:</strong> @Model.CreatedDate.ToShortDateString()</p>

    <div class="card mb-4 border-info">
        <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-robot"></i> AI Project Summary</h5>
            @if (isOrganizer)
            {
                <form asp-action="GenerateSummary" method="post">
                    <input type="hidden" name="projectId" value="@Model.Id" />
                    <button type="submit" class="btn btn-light btn-sm">Update Report</button>
                </form>
            }
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(Model.AISummary))
            {
                <p>@Model.AISummary</p>
                <small class="text-muted">Generated at: @Model.AISummaryGeneratedAt</small>
            }
            else
            {
                <p class="text-muted">No summary generated yet.</p>
            }
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col-md-4">
            <h3>Team Members</h3>
            <ul class="list-group mb-3">
                @foreach (var member in Model.Members)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @member.User.UserName
                        @if (member.User.UserName == Model.Organizer.UserName)
                        {
                            <span class="badge bg-primary rounded-pill">Organizer</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary rounded-pill">Member</span>
                        }
                    </li>
                }
            </ul>

            @if (isOrganizer)
            {
                <div class="card">
                    <div class="card-header">Add Member</div>
                    <div class="card-body">
                        @if (TempData["Error"] != null)
                        {
                            <div class="alert alert-danger">@TempData["Error"]</div>
                        }
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success">@TempData["Success"]</div>
                        }

                        <form asp-action="AddMember" method="post">
                            <input type="hidden" name="projectId" value="@Model.Id" />
                            <div class="form-group mb-2">
                                <label for="email" class="control-label">User Email</label>
                                <input type="email" name="email" class="form-control" required placeholder="user@example.com" />
                            </div>
                            <button type="submit" class="btn btn-primary btn-sm">Add to Team</button>
                        </form>
                    </div>
                </div>
            }
        </div>

        <div class="col-md-8">
            <div class="d-flex justify-content-between align-items-center">
                <h3>Tasks</h3>
                @if (isOrganizer)
                {
                    <a asp-controller="Task" asp-action="Create" asp-route-projectId="@Model.Id" class="btn btn-primary">New Task</a>
                }
            </div>
            
            <table class="table table-striped mt-3">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Status</th>
                        <th>Assigned To</th>
                        <th>Due Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model.Tasks)
                    {
                        <tr>
                            <td>
                                <a asp-controller="Task" asp-action="Details" asp-route-id="@task.Id" class="text-decoration-none font-weight-bold">
                                    @task.Title
                                </a>
                            </td>
                            <td>
                                <span class="badge @(task.Status == TaskManagementPlatform.Models.TaskStatus.Completed ? "bg-secondary" : task.Status == TaskManagementPlatform.Models.TaskStatus.InProgress ? "bg-primary" : "bg-light text-dark border")">
                                    @task.Status
                                </span>
                            </td>
                            <td>
                                @if (task.AssignedTo != null)
                                {
                                    @task.AssignedTo.UserName
                                }
                                else
                                {
                                    <span class="text-muted">Unassigned</span>
                                }
                            </td>
                            <td>@task.EndDate.ToShortDateString()</td>
                            <td>
                                <a asp-controller="Task" asp-action="Edit" asp-route-id="@task.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                                <form asp-controller="Task" asp-action="Delete" asp-route-id="@task.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">Back to Projects</a>
    </div>
</div>
