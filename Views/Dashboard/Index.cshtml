@model TaskManagementPlatform.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "My Dashboard";
}

<div class="container">
    <h1 class="mb-4">Dashboard</h1>

    @if (Model.UpcomingDeadlines.Any())
    {
        <div class="alert alert-warning">
            <h4><i class="bi bi-exclamation-triangle-fill"></i> Due Soon</h4>
            <ul class="mb-0">
                @foreach (var task in Model.UpcomingDeadlines)
                {
                    <li>
                        <strong>@task.Title</strong> (in @task.Project.Title) is due on @task.EndDate.ToShortDateString()
                        <a asp-controller="Task" asp-action="Details" asp-route-id="@task.Id" class="alert-link">View</a>
                    </li>
                }
            </ul>
        </div>
    }

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between align-items-center" style="background-color: var(--accent-secondary); color: white;">
                    <h4 class="mb-0">My Projects</h4>
                    <span class="badge bg-white text-dark">@Model.MyProjects.Count</span>
                </div>
                <div class="list-group list-group-flush">
                    @foreach (var project in Model.MyProjects)
                    {
                        <a asp-controller="Project" asp-action="Details" asp-route-id="@project.Id" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">@project.Title</h5>
                                <small>@project.CreatedDate.ToShortDateString()</small>
                            </div>
                            <p class="mb-1 text-truncate">@project.Description</p>
                            <small class="text-muted">Role: @(project.Organizer.UserName == User.Identity.Name ? "Organizer" : "Member")</small>
                        </a>
                    }
                    @if (!Model.MyProjects.Any())
                    {
                        <div class="p-3 text-center text-muted">
                            You are not part of any project yet.
                            <br/>
                            <a asp-controller="Project" asp-action="Create" class="btn btn-sm btn-outline-primary mt-2">Create New</a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
             <div class="card shadow-sm h-100">
                <div class="card-header d-flex justify-content-between align-items-center" style="background-color: var(--accent-primary); color: white;">
                    <h4 class="mb-0">My Tasks</h4>
                     <span class="badge bg-white text-dark">@Model.MyTasks.Count(t => t.Status != TaskManagementPlatform.Models.TaskStatus.Completed) Active</span>
                </div>
                <div class="card-body p-0">
                    <ul class="nav nav-tabs" id="taskTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="todo-tab" data-bs-toggle="tab" data-bs-target="#todo" type="button" role="tab">To Do / In Progress</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="done-tab" data-bs-toggle="tab" data-bs-target="#done" type="button" role="tab">Completed</button>
                        </li>
                    </ul>
                    <div class="tab-content p-3" id="taskTabsContent">
                        <div class="tab-pane fade show active" id="todo" role="tabpanel">
                            @foreach (var task in Model.MyTasks.Where(t => t.Status != TaskManagementPlatform.Models.TaskStatus.Completed))
                            {
                                <div class="card mb-2 border-left-primary">
                                    <div class="card-body p-2">
                                        <div class="d-flex justify-content-between">
                                            <h6 class="card-title mb-1"><a asp-controller="Task" asp-action="Details" asp-route-id="@task.Id">@task.Title</a></h6>
                                             <span class="badge @(task.Status == TaskManagementPlatform.Models.TaskStatus.InProgress ? "bg-warning" : "bg-secondary")">@task.Status</span>
                                        </div>
                                        <small class="text-muted">@task.Project.Title | Due: @task.EndDate.ToShortDateString()</small>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="tab-pane fade" id="done" role="tabpanel">
                             @foreach (var task in Model.MyTasks.Where(t => t.Status == TaskManagementPlatform.Models.TaskStatus.Completed))
                            {
                                <div class="card mb-2 bg-light">
                                    <div class="card-body p-2">
                                        <h6 class="card-title mb-1 text-decoration-line-through">@task.Title</h6>
                                        <small class="text-muted">@task.Project.Title</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
