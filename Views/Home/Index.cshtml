@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center hero-section py-5 mb-4 rounded-3">
    <h1 class="display-3 fw-bold mb-3">Organize Your Work</h1>
    <p class="lead mb-4">The smart project management tool designed for modern teams.</p>
    
    @if (!User.Identity.IsAuthenticated)
    {
        <div class="d-flex justify-content-center gap-3">
            <a class="btn btn-light btn-lg px-4 fw-bold text-primary" asp-area="Identity" asp-page="/Account/Register">Get Started</a>
            <a class="btn btn-outline-light btn-lg px-4" asp-area="Identity" asp-page="/Account/Login">Sign In</a>
        </div>
    }
    else
    {
        <a class="btn btn-light btn-lg px-5 fw-bold text-primary" asp-controller="Dashboard" asp-action="Index">Go to Dashboard</a>
    }
</div>

<div class="row mt-5 text-center">
    <div class="col-md-4 mb-4">
        <div class="card h-100 p-4">
            <div class="display-4 text-primary mb-3"><i class="bi bi-kanban"></i></div>
            <h3>Project Tracking</h3>
            <p class="text-muted">Manage multiple projects, assign tasks, and track progress with ease.</p>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 p-4">
            <div class="display-4 text-primary mb-3"><i class="bi bi-people-fill"></i></div>
            <h3>Team Collaboration</h3>
            <p class="text-muted">Invite members, assign roles, and comment on tasks in real-time.</p>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 p-4">
            <div class="display-4 text-primary mb-3"><i class="bi bi-robot"></i></div>
            <h3>AI Insights</h3>
            <p class="text-muted">Generate instant project summaries and get risks analysis powered by AI.</p>
        </div>
    </div>
</div>
