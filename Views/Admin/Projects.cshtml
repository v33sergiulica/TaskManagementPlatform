@model IEnumerable<TaskManagementPlatform.Models.Project>

@{
    ViewData["Title"] = "Admin - Projects";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Manage Projects</h1>
    <a asp-controller="Admin" asp-action="Users" class="btn btn-outline-primary">Manage Users</a>
</div>

<div class="card p-4">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Organizer</th>
                <th>Tasks</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Organizer.UserName</td>
                    <td>@item.Tasks?.Count</td>
                    <td>@item.CreatedDate.ToShortDateString()</td>
                    <td>
                        <form asp-action="DeleteProject" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this project?');">
                            <button type="submit" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
